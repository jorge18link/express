      //      option #{usuario.titulo}
      
  script(src='/bower_components/angular/angular.min.js')
  script(src='/bower_components/Autocomplete/dist/autocomplete.js')
  script(src='/public/javascript/app.js')
  script(src='/public/javascript/autocomplete.js')
